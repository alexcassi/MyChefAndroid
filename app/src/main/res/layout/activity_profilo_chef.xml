<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer1"
    android:fitsSystemWindows="true"
    tools:context=".Login" >

    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="PROFILO"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/titolo"
            android:layout_marginTop="100dp"
            android:ems="8"
            android:gravity="center"
            android:hint="NOME "
            android:layout_marginLeft="5dp"
            android:textColorHint="@android:color/background_dark" />

        <EditText
            android:id="@+id/cognome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/nome"
            android:layout_marginTop="15dp"
            android:ems="8"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:hint="COGNOME "
            android:textColorHint="@android:color/background_dark" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/cognome"
            android:layout_marginTop="15dp"
            android:ems="8"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:hint="EMAIL "
            android:textColorHint="@android:color/background_dark" />

        <Button
            android:id="@+id/ricette"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_dark"
            android:text="RICETTE" />

        <Button
            android:id="@+id/home"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ricette"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_dark"
            android:text="HOME" />

        <Button
            android:id="@+id/edit"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/titolo"
            android:background="@drawable/modifica2"
            android:gravity="center" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titolo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>
    </ScrollView>

